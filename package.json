{
  "name": "qpub",
  "license": "MIT",
  "version": "0.0.0",
  "description": "A tool for fully automatic publishing of npm packages",
  "authors": [
    {
      "name": "fengxin",
      "email": "1244200081@qq.com"
    },
    "西索酱"
  ],
  "files": [
    ".github",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepatch":"pnpm build",
    "patch": "qpub patch main",
    "minor": "qpub minor main",
    "major": "qpub major main",
    "patchBeta": "qpub patchBeta main",
    "minorBeta": "qpub minorBeta main",
    "majorBeta": "qpub majorBeta main"
  },
  "bugs": {
    "url": "https://github.com/takegine/Cimi/issues"
  },
  "homepage": "https://github.com/takegine/Cimi#readme",
  "main": "dist/index",
  "bin": "dist/cli.js",
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.20",
    "eslint": "^8.23.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "tsup": {
    "entry": [
      "src/*.ts"
    ],
    "minify": true,
    "splitting": false,
    "clean": true,
    "dts": true,
    "skipNodeModulesBundle": true
  }
}
